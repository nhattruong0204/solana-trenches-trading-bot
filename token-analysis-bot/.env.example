# ===========================================
# Token Analysis Bot Configuration
# ===========================================

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/token_analysis
REDIS_URL=redis://localhost:6379/0

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_TARGET_CHANNEL=-1001234567890
TELEGRAM_ADMIN_USERS=123456789,987654321

# Telegram Client (for Moltbook monitoring)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
TELEGRAM_SESSION_NAME=token_analyzer

# LLM Configuration
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# Base Chain RPC
BASE_RPC_URL=https://mainnet.base.org
BASE_WSS_URL=wss://mainnet.base.org

# Twitter/X API
TWITTER_BEARER_TOKEN=your_bearer_token
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret

# DexScreener API (no auth needed)
DEXSCREENER_API_URL=https://api.dexscreener.com/latest

# Moltbook Configuration
MOLTBOOK_API_URL=https://moltbook.com/api
MOLTBOOK_POLL_INTERVAL_SECONDS=30

# Analysis Settings
MIN_LIQUIDITY_USD=5000
MIN_HOLDER_COUNT=50
MAX_TOP_HOLDER_PERCENTAGE=30
CONFIDENCE_THRESHOLD=0.7

# Human-in-the-loop
ENABLE_HUMAN_APPROVAL=false
APPROVAL_TIMEOUT_SECONDS=300

# Rate Limiting
MAX_ANALYSES_PER_HOUR=60
COOLDOWN_BETWEEN_POSTS_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/token_analysis.log
